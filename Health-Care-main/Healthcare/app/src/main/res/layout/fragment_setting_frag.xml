<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    tools:context=".Setting_frag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Appoinment_Check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:gravity="fill|fill_horizontal"
            android:text="Appointment"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/abouthos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_baseline_local_hospital_24"
            android:gravity="fill"
            android:text="About Hospital"
            android:textColor="@color/black" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/app_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/concert_one"
                android:gravity="center|center_horizontal"
                android:text="MEDICOVER HOSPITALS"
                android:textColor="#194d99"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_view5" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_view5" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_view5" />

            <TextView
                android:id="@+id/dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_view5"
                android:ems="10"
                android:gravity="center|clip_vertical|fill_horizontal|center_vertical"
                android:hint="Select Date"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/pat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_view5"
                android:ems="10"
                android:hint="Patient Name"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/pnumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_view5"
                android:ems="10"
                android:hint="Phone number"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/bookApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#1268b2"
                android:text="Book Appoinment" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>